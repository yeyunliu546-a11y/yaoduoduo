{
	"easycom": {
	        "autoscan": true,
	        "custom": {
	            // 这里指向我们偷梁换柱后的 uview-ui 目录
	            "^u-(.*)": "@/uview-ui/components/u-$1/u-$1.vue"
	        }
	    },
	"pages": [
		// =========================================================
		// 1. 底部 TabBar 页面
		// =========================================================
		{
			"path": "pages/index/index",
			"style": {
				"navigationBarTitleText": "首页",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/category/category",
			"style": {
				"navigationBarTitleText": "分类"
			}
		},
		{
			"path": "pages/cart/cart",
			"style": {
				"navigationBarTitleText": "购物车",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/user/user",
			"style": {
				"navigationBarTitleText": "个人中心",
				"navigationStyle": "custom"
			}
		},

		// =========================================================
		// 2. 订单与交易 (本次核心修改)
		// =========================================================
		{
			"path": "pages/order/create",
			"style": {
				"navigationBarTitleText": "确认订单",
				"enablePullDownRefresh": false
			}
		},
		{
			"path": "pages/order/order",
			"style": {
				"navigationBarTitleText": "我的订单",
				"enablePullDownRefresh": true
			}
		},
		{
			"path": "pages/order/detail",
			"style": {
				"navigationBarTitleText": "订单详情"
			}
		},
		{
			"path": "pages/order/center",
			"style": {
				"navigationBarTitleText": "订单中心"
			}
		},

		// =========================================================
		// 3. 商品详情
		// =========================================================
		{
			"path": "pages/good/detail",
			"style": {
				"navigationBarTitleText": "商品详情"
			}
		},
		{
			"path": "pages/good/brand-detail",
			"style": {
				"navigationBarTitleText": "品牌详情"
			}
		},
		{
			"path": "pages/search/search",
			"style": {
				"navigationBarTitleText": "搜索"
			}
		},

		// =========================================================
		// 4. 收货地址
		// =========================================================
		{
			"path": "pages/address/index",
			"style": {
				"navigationBarTitleText": "收货地址"
			}
		},
		{
			"path": "pages/address/create",
			"style": {
				"navigationBarTitleText": "新增地址"
			}
		},
		{
			"path": "pages/address/update",
			"style": {
				"navigationBarTitleText": "编辑地址"
			}
		},

		// =========================================================
		// 5. 售后退款
		// =========================================================
		{
			"path": "pages/refund/index",
			"style": {
				"navigationBarTitleText": "退款/售后"
			}
		},
		{
			"path": "pages/refund/apply",
			"style": {
				"navigationBarTitleText": "申请退款"
			}
		},
		{
			"path": "pages/refund/detail",
			"style": {
				"navigationBarTitleText": "退款详情"
			}
		},

		// =========================================================
		// 6. 用户资产 (优惠券、钱包、积分)
		// =========================================================
		{
			"path": "pages/coupon/index",
			"style": {
				"navigationBarTitleText": "领券中心"
			}
		},
		{
			"path": "pages/my-coupon/index",
			"style": {
				"navigationBarTitleText": "我的优惠券"
			}
		},
		{
			"path": "pages/wallet/recharge/index",
			"style": {
				"navigationBarTitleText": "充值中心"
			}
		},
		{
			"path": "pages/wallet/recharge/order",
			"style": {
				"navigationBarTitleText": "充值记录"
			}
		},
		{
			"path": "pages/points/log",
			"style": {
				"navigationBarTitleText": "积分明细"
			}
		},
		//收藏夹
		{
			"path": "pages/favorite/index",
			"style": {
				"navigationBarTitleText": "调剂收藏夹",
				"enablePullDownRefresh": false
			}
		},
		// =========================================================
		// 7. 基础服务 (登录、帮助、认证)
		// =========================================================
		{
			"path": "pages/login/index",
			"style": {
				"navigationBarTitleText": "登录"
			}
		},
		{
			"path": "pages/help/index",
			"style": {
				"navigationBarTitleText": "帮助中心"
			}
		},
		{
			"path": "pages/auth/certUpload",
			"style": {
				"navigationBarTitleText": "资质上传"
			}
		},
		{
			"path": "pages/auth/certStatus",
			"style": {
				"navigationBarTitleText": "认证状态"
			}
		}
	],
	"globalStyle": {
		"navigationBarTextStyle": "black",
		"navigationBarTitleText": "药多多",
		"navigationBarBackgroundColor": "#FFFFFF",
		"backgroundColor": "#F8F8F8"
	},
	"tabBar": {
		"color": "#909399",
		"selectedColor": "#2979ff",
		"borderStyle": "black",
		"backgroundColor": "#ffffff",
		"list": [
			{
				"pagePath": "pages/index/index",
				"iconPath": "static/tabbar/home.png",
				"selectedIconPath": "static/tabbar/home-active.png",
				"text": "首页"
			},
			{
				"pagePath": "pages/category/category",
				"iconPath": "static/tabbar/cate.png",
				"selectedIconPath": "static/tabbar/cate-active.png",
				"text": "分类"
			},
			{
				"pagePath": "pages/cart/cart",
				"iconPath": "static/tabbar/cart.png",
				"selectedIconPath": "static/tabbar/cart-active.png",
				"text": "购物车"
			},
			{
				"pagePath": "pages/user/user",
				"iconPath": "static/tabbar/user.png",
				"selectedIconPath": "static/tabbar/user-active.png",
				"text": "我的"
			}
		]
	}
}